@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Projects</h2>

@Html.ActionLink("New project", "New", "Projects", null, new { @class = "btn btn-primary" })

<table id="projects" class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>Name</th>
            <th>Status</th>
            <th>Date modified</th>
            <th>Date created</th>
            <th>Actions</th>
        </tr>
    </thead>
