@using DevOps.ProjectManager.Models
@model IEnumerable<DevOps.ProjectManager.Models.Project>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Projects</h2>

@Html.ActionLink("New project", "New", "Projects", null, new { @class = "btn btn-primary" })

<table id="projects" class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>Name</th>
            <th>Status</th>
            <th>Date modified</th>
            <th>Date created</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody></tbody>
</table>

<div class="shadowBox" id="detailsPartial">

</div>

@section scripts
{
    <script>
        $(document).ready(function () {
            $("#projects").DataTable({
                ajax: {
                    url: "/api/projects",
                    dataSrc: ""
                },
                columns: [
                    {
                        data: "name",
                        render: function (data, type, project) {
                            return "<button class='btn-link js-details' data-project-id=" + project.id + ">" + project.name + "</button>"
                            //return "<a href='/projects/edit/" + project.id + "'>" + project.name + "</a>";
                        }
                    },
                    {
                        data: "status.name"
                    },
                    {
                        data: "dateUpdated"
                    },
                    {
                        data: "dateCreated"
                    },
                    {
                        data: "id",
                        render: function (data) {
                            return "<button id='projectdetails' class='btn-link js-delete' data-project-id=" + data + ">Delete</button>";
                        }
                    }
                ]
            });


            $("#projects").on("click", ".js-delete", function () {
                var button = $(this);

                bootbox.confirm("Are you sure you want to delete this project?", function (result) {
                    if (result) {
                        $.ajax({
                            url: "/api/projects/" + button.attr("data-project-id"),
                            method: "DELETE",
                            success: function () {
                                $("#projects").row(button.parents("tr")).remove().draw();
                            }
                        });
                    }
                });
            });

            $("#projects").on("click", ".js-details", function () {
                var button = $(this);
                var projectId = button.attr("data-project-id")
                var url = '@Url.Action("Details", "Projects")'
                url += "/" + projectId

                $('#detailsPartial').load(url, { id: projectId });
            });
        });
    </script>
}